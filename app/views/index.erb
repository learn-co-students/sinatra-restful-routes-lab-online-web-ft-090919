<% @recipes.each do |recipe| %>
    <h1><%= recipe.name.capitalize %></h1>
    <p>Requires: <%= recipe.ingredients %></p>
    <h2>Cooks For: <%= recipe.cook_time %></h2>
    <p><a href=<%="/recipes/#{recipe.id}"%>> View Recipe </a></p>
    <p><a href=<%="/recipes/#{recipe.id}/edit"%>> Edit Recipe</a></p>
    -----------------------------------------------------------------------------------------------------------------------------------
    <%end%>
