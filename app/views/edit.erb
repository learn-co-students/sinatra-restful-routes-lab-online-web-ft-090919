<h1>Edit Recipe</h1><br/>

<form method="post" action="/recipes/<%= @recipe.id %>" >
  
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  Recipe Name: <input type="text" id="name" name="name" value="<%= @recipe.name %>" /><br/>
  
  Cook Time: <input type="text" id="cook_time" name="cook_time" value="<%= @recipe.cook_time %>" /><br/>
  
  Ingredients: <input type="text" id="ingredients" name="ingredients" value="<%= @recipe.ingredients %>" /><br/>
  
  <input type="submit" value="Update Post" />
  
</form>

